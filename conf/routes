# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

# User CRUD
## index
GET     /users                      controllers.api.UsersController.index
## create
POST    /users                      controllers.api.UsersController.create
## read
GET     /users/:id                  controllers.api.UsersController.show(id: Int)
## update
PUT     /users/:id                  controllers.api.UsersController.update(id: Int)
## delete
DELETE  /users/:id                  controllers.api.UsersController.delete(id: Int)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

# wabjars
GET     /webjars/*file              controllers.WebJarAssets.at(file)
